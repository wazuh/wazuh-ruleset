<decoder name="ntpd">
  <program_name>^ntpd</program_name>
</decoder>

<decoder name="ntpd-bad-peer">
  <parent>ntpd</parent>
  <prematch offset="after_parent">^bad peer </prematch>
  <regex>^bad peer \S+ \p(\S+)\p$|^bad peer from pool \S+ \p(\S+)\p$</regex>
  <order>srcip</order>
</decoder>
