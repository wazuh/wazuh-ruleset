<decoder name="sudo">
    <program_name>^sudo</program_name>
</decoder>

<decoder name="sudo-fields">
  <parent>sudo</parent>
  <prematch>\s</prematch>
  <regex>^\s*(\S+)\s*:</regex>
  <order>srcuser</order>
  <fts>name,srcuser,location</fts>
  <ftscomment>First time user executed the sudo command</ftscomment>
</decoder>

<decoder name="sudo-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">TTY=(\S+)</regex>
  <order>tty</order>
</decoder>

<decoder name="sudo-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">PWD=(\S+)</regex>
  <order>pwd</order>
</decoder>

<decoder name="sudo-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">USER=(\S+)</regex>
  <order>dstuser</order>
</decoder>

<decoder name="sudo-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">COMMAND=(\.+)</regex>
  <order>command</order>
</decoder>



<decoder name="sudo">
    <program_name/>
    <prematch>^\S+\s+:\s+HOST=\S+\s+:\s+\.+;</prematch>
</decoder>

<decoder name="sudo2-fields">
    <parent>sudo</parent>
    <program_name/>
    <regex>(\S+)\s+:\s+HOST</regex>
    <order>srcuser</order>
    <fts>name,srcuser,location</fts>
    <ftscomment>First time user executed the sudo command</ftscomment>
</decoder>

<decoder name="sudo2-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">=(\S+)\s*:</regex>
  <order>host</order>
</decoder>

<decoder name="sudo2-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">TTY=(\S+)</regex>
  <order>tty</order>
</decoder>

<decoder name="sudo2-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">PWD=(\S+)</regex>
  <order>pwd</order>
</decoder>

<decoder name="sudo2-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">USER=(\S+)</regex>
  <order>dstuser</order>
</decoder>

<decoder name="sudo2-fields">
  <parent>sudo</parent>
  <regex offset="after_regex">COMMAND=(\.+)</regex>
  <order>command</order>
</decoder>
