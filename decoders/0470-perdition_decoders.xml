<decoder name="perdition">
  <program_name>^perdition</program_name>
</decoder>

<decoder name="perdition-connections">
  <parent>perdition</parent>
  <regex>Connect:  (\d+.\d+.\d+.\d+)</regex>
  <order>srcip</order>
</decoder>
