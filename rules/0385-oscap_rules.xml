<!--
ID Range:
OpenSCAP syslog messages: 81400 - 81499
Wodle OpenSCAP: 81500 - 81600
-->

<group name="oscap,">

    <rule id="81400" level="0">
        <decoded_as>oscap</decoded_as>
        <description>OpenSCAP messages grouped.</description>
